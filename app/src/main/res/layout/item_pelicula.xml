<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="190dp"
    android:layout_height="450dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    app:cardBackgroundColor="#FFF"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    app:contentPadding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivFoto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Título de la película"
            android:textSize="16sp"
            android:layout_below="@+id/ivFoto"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:textColor="#000"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvResenia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reseña breve de la película"
            android:textSize="12sp"
            android:layout_below="@+id/tvTitulo"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:textColor="#000"/>

        <Button
            android:id="@+id/btnDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver detalle"
            android:backgroundTint="#FF5722"
            android:textColor="#FFF"
            android:textSize="12sp"
            android:layout_below="@+id/tvResenia"
            android:layout_marginTop="16dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:elevation="5dp"
            android:stateListAnimator="@null"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
